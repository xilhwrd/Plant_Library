<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ngày được chọn -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color" /> <!-- Màu nền khi được chọn -->
            <corners android:radius="8dp" /> <!-- Đường viền bo tròn -->
        </shape>
    </item>
    <!-- Ngày không được chọn -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu nền trong suốt khi không được chọn -->
            <corners android:radius="8dp" /> <!-- Đường viền bo tròn -->
        </shape>
    </item>
</selector>