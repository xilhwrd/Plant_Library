<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plant_Library" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/MyCardViewOverlay</item>
    </style>

    <style name="MyCardViewOverlay">
        <item name="cornerFamily">rounded</item>
        <!-- below items does not work with normal ImageView -->
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">60dp</item>
        <item name="cornerSizeBottomLeft">60dp</item>
        <item name="android:solidColor">@color/main_color</item>
        <item name="color">@color/main_color</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="CustomCardViewGenre" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/MyCardViewGenre</item>
    </style>

    <style name="MyCardViewGenre">
        <item name="cornerFamily">cut</item>
        <!-- below items does not work with normal ImageView -->
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">100dp</item>
        <item name="cornerSizeBottomLeft">100dp</item>
        <item name="android:solidColor">@color/main_color</item>
        <item name="color">@color/main_color</item>
    </style>


    <style name="CustomCardViewArticle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ArticleCardViewOverlay</item>
    </style>

    <style name="ArticleCardViewOverlay">
        <item name="cornerFamily">rounded</item>
        <!-- below items does not work with normal ImageView -->
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="android:solidColor">@color/main_color</item>
        <item name="color">@color/main_color</item>
    </style>
</resources>